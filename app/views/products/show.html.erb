    <div class="details col-md-5" style="margin-top:50px;">
      <h3 class="product-title"><%= @product.title %></h3>
      <div class="col-md-6">
        <% if @product.image.present? %>
          <%= image_tag(@product.image.medium.url, class: "thumbnail") %>
        <% else %>
          <%= image_tag("http://placehold.it/400x400&text=No Pic", class: "thumbnail") %>
        <% end %>
      </div>
      <div class="price-service">
        <p class="price">品牌: <span class="rmb"> </span><span class="msrp"><%= @product.brand %></span> </p>
        <p class="price">型号: <span class="rmb"> </span><span class="price"><%= @product.model %></span> </p>
        <p class="price">产地: <span class="rmb"> </span><span class="price"><%= @product.country %></span> </p>
